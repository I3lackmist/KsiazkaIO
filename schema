CREATE TABLE Categories(
CategoryName TEXT PRIMARY KEY
);

CREATE TABLE Recipes( 
RecipeID INTEGER PRIMARY KEY AUTOINCREMENT,
Name TEXT NOT NULL,
Description TEXT NOT NULL,
Likes INTEGER NOT NULL
);

CREATE TABLE Products (
ProductID INTEGER PRIMARY KEY AUTOINCREMENT, 
Carbohydrates REAL NOT NULL, 
Proteins REAL NOT NULL, 
Fats REAL NOT NULL, 
Kcal REAL NOT NULL, 
Note TEXT,
Name TEXT
);

CREATE TABLE Users(
Login TEXT NOT NULL UNIQUE PRIMARY KEY,
Email TEXT NOT NULL UNIQUE, 
Password NOT NULL, 
Name NOT NULL UNIQUE, 
DateRegistered REAL NOT NULL
);

CREATE TABLE Moderators(
Login TEXT PRIMARY KEY NOT NULL,
DateSince REAL NOT NULL 
);

CREATE TABLE Bans(
Login TEXT NOT NULL,
DateSince REAL NOT NULL,
DateUntil REAL NOT NULL
);

CREATE TABLE Articles(
ArticleID INTEGER PRIMARY KEY AUTOINCREMENT,
Title TEXT NOT NULL,
Body TEXT NOT NULL
);

CREATE TABLE RecipeComments(
RecipeCommentID INTEGER PRIMARY KEY AUTOINCREMENT,
Body TEXT NOT NULL,
Date REAL NOT NULL,
Likes INTEGER NOT NULL
);

CREATE TABLE ArticleComments(
ArticleCommentID INTEGER PRIMARY KEY AUTOINCREMENT,
Body TEXT NOT NULL,
Date REAL NOT NULL,
Likes INTEGER NOT NULL
);

CREATE TABLE RecipesCategories (
RecipeID INTEGER NOT NULL,
CategoryName TEXT NOT NULL,
PRIMARY KEY(RecipeID,CategoryName)
);

CREATE TABLE RecipesProducts(
RecipeID REAL NOT NULL,
ProductID REAL NOT NULL,
AMOUNT REAL NOT NULL,
PRIMARY KEY(RecipeID,ProductID)
);

CREATE TABLE ArticleAuthor(
ArticleID INTEGER NOT NULL,
Login TEXT NOT NULL,
PRIMARY KEY(ArticleID, Login)
);

CREATE TABLE RecipeCommentUser(
RecipeID INTEGER NOT NULL,
RecipeCommentID INTEGER NOT NULL,
Login TEXT NOT NULL,
PRIMARY KEY(RecipeID, RecipeCommentID, Login)
);

CREATE TABLE ArticleCommentUser(
ArticleID INTEGER NOT NULL,
ArticleCommentID INTEGER NOT NULL,
Login TEXT NOT NULL,
PRIMARY KEY(ArticleID, ArticleCommentID, Login)
);

CREATE TABLE RecipesAuthors (
RecipeID INTEGER NOT NULL,
Login TEXT NOT NULL, 
PRIMARY KEY(RecipeID, Login)
);
